<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.boomzoned.projects.eplfixtures2017_18.ClubFixtureListActivity">

    <TextView
        android:id="@+id/fixtures_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_8"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="@dimen/margin_24"
        android:text="@string/fixtures_text"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fixturesRecyclerView"
        android:layout_width="match_parent"
        android:layout_above="@+id/adView"
        android:layout_below="@id/fixtures_txtview"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >

    </android.support.v7.widget.RecyclerView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9765530811229205/7744499326">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
